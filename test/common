#!/bin/bash

SCRIPT="$0"
describe(){
    local DESCRIPTION=$(cat "$SCRIPT" \
        |sed '/^[^#]/q' \
        |head -n -1 \
        |tail -n +3 \
        |sed -e :a -e '/^\n*$/{$d;N;ba' -e '}' \
        |cut -c3- \
        |sed 's/^/  /')
    echo "$DESCRIPTION"
    exit 0; }
if [ ! -z "$1" ] &&
   $(echo "$1"|grep -q "^\-d$");then describe; fi

HELLO=etc/hello.c

run_hello(){
    clang-mutate "$@" $HELLO --; }

json_filter(){
    cat -|jshon -a -j|grep "\"${1}\":${2}\(,\|}\)"; }

inserted(){
    wdiff $HELLO <(cat -)|grep "{\+.*\+}"|sed 's/^.*{+//;s/+}.*$//'; }

cuted(){
    wdiff $HELLO <(cat -)|grep "\[-.*-\]"|sed 's/^.*\[-//;s/-\].*$//'; }

contains(){
    if [ ! $? -eq 0 ];then exit 1;fi
    BASE="$1"; shift;
    for TARGET in "$@";do
        if ! $(echo "$BASE"|grep "$TARGET" >/dev/null 2>/dev/null);then
            echo "missing \"$TARGET\""
            exit 1;
        fi
    done; }

not_contains(){
    if [ ! $? -eq 0 ];then exit 1;fi
    BASE="$1"; shift;
    for TARGET in "$@";do
        if ! $(echo "$BASE"|grep -v "$TARGET" >/dev/null 2>/dev/null);then
            exit 1;
        fi
    done; }
